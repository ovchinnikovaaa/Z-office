<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zoffice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BillActivity"/>
        <activity android:name=".ReportActivity" />
        <activity android:name=".TasksActivity" />
        <activity android:name=".PersonnelActivity" />
        <activity android:name=".AccountingActivity" />
        <activity android:name=".AnalyticsActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".ChatMessagingActivity" />
        <activity android:name=".InformationActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".SupportActivity" />
        <activity android:name=".AlertsActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>